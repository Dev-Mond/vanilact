{
  "compilerOptions": {
    "target": "es5", // Modern JS for browser support
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017",
      "es2019"
    ],
    "module": "ESNext", // Use ES modules (for `import`)
    "moduleResolution": "node", // Helps with modern bundlers like Vite/Webpack
    "outDir": "./dist", // Output directory
    "rootDir": "./src", // Source directory
    "esModuleInterop": true, // Allow default imports from CommonJS
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "types": [
      "jest"
    ]
  },
  "include": [
    "src"
  ]
}